<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh nền đen -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_black"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIẾN ĐỘ HỌC TẬP"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Hai biểu đồ tròn song song -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="20dp">

            <!-- Card cho Từ vựng -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E6FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TỪ VỰNG"
                        android:textStyle="bold"
                        android:textColor="#7B1FA2"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                        <ProgressBar
                            android:id="@+id/progressCircleWords"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/circle_progress_words" />
                        <TextView
                            android:id="@+id/tvPercentWords"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2D3436" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tvWordsStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0/0 Đã thuộc"
                        android:textSize="12sp"
                        android:textColor="#2D3436" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card cho Mẫu câu -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E6FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MẪU CÂU"
                        android:textStyle="bold"
                        android:textColor="#00B894"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"/>
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                        <ProgressBar
                            android:id="@+id/progressCirclePhrases"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/circle_progress_phrases" />
                        <TextView
                            android:id="@+id/tvPercentPhrases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2D3436" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tvPhrasesStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0/0 Đã thuộc"
                        android:textSize="12sp"
                        android:textColor="#2D3436" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách đã thuộc (Đúng 5 lần)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <ListView
            android:id="@+id/lvMasteredItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:divider="#CCCCCC"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/btnBackFromProgress"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="QUAY LẠI MENU"
            android:layout_marginTop="10dp"
            android:backgroundTint="#636E72"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</FrameLayout>