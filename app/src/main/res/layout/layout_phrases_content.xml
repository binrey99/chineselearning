<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_red"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">
            <Spinner
                android:id="@+id/spinnerPhrases"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvPhraseHanzi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="你好"
                        android:textColor="#2D3436"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhrasePinyin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Nǐ hǎo"
                        android:textColor="#0984E3"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tvPhraseMeaning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Chào bạn"
                        android:textColor="#636E72"
                        android:textSize="24sp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/ivSpeakPhrase"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_volume_up" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnStarPhrase"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/btn_star_big_off"
                    android:scaleType="centerInside"
                    android:contentDescription="Đánh dấu câu" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/phraseProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progressTint="#00B894" />
        <TextView
            android:id="@+id/tvPhraseProgressCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 0"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnBackFromPhrases"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#FF7675"
                android:text="THOÁT"
                android:textSize="12sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btnPrevPhrase"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#636E72"
                android:text="LÙI"
                android:textSize="12sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btnNextPhrase"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:backgroundTint="#00B894"
                android:text="TIẾP"
                android:textSize="12sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>