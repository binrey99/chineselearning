<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <EditText
                android:id="@+id/etSearchWord"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Tìm kiếm từ vựng..."
                android:background="@android:color/transparent"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#636E72"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">
        <Spinner
            android:id="@+id/spinnerTopics"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHanzi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="55sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/kaiu"
                        android:text="字" />

                    <TextView
                        android:id="@+id/tvPinyin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#0984E3"
                        android:textSize="24sp"
                        android:text="zì" />

                    <TextView
                        android:id="@+id/tvMeaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="18sp"
                        android:textColor="#636E72"
                        android:textStyle="italic"
                        android:text="Chữ, từ" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivMic"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:src="@android:drawable/ic_btn_speak_now"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/ivSpeak"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_volume_up"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSpeakScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phát âm: --"
                        android:textColor="#FF7675"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgWordDesc"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnStar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|start"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/btn_star_big_off"
                android:scaleType="centerInside"
                android:contentDescription="Đánh dấu từ" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- WebView nằm dưới cùng -->
            <WebView
                android:id="@+id/webViewStroke"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@android:color/transparent" />

            <!-- DrawingView nằm trên cùng để nhận tương tác vuốt vẽ -->
            <com.example.chineselearning.DrawingView
                android:id="@+id/drawingView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnPlayStroke"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|end"
                android:layout_margin="10dp"
                android:src="@android:drawable/ic_media_play"
                android:background="@drawable/circle_bg"
                app:tint="#FFFFFF"
                android:elevation="4dp"/>

            <TextView
                android:id="@+id/tvDrawScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm: --"
                android:textSize="20sp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/learningProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progressTint="#00B894" />
    <TextView
        android:id="@+id/tvWordProgressLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 0"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnBackFromLearn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="THOÁT"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/btnPreviousLearn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="LÙI"
            android:backgroundTint="#FF7675"
            android:layout_marginHorizontal="2dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="XÓA"
            android:backgroundTint="#636E72"
            android:layout_marginHorizontal="2dp" />

        <Button
            android:id="@+id/btnNextLearn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="TIẾP"
            android:backgroundTint="#00B894" />
    </LinearLayout>
</LinearLayout>