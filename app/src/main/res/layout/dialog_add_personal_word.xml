<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/etPersonalHanzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập chữ Hán"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etPersonalMeaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập nghĩa tiếng Việt"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hình ảnh minh họa:"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/ivPersonalPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:background="#DFE6E9"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chạm vào ảnh để chụp/chọn ảnh"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#636E72"/>

</LinearLayout>